#!/bin/bash
# Tear down the NAT routing that was setup when the WG VPN was started

IPT="/sbin/iptables"
IPT6="/sbin/ip6tables"

## IPv4 ##
$IPT --table nat --delete POSTROUTING --source {{ wired_cidr }} --out-interface {{ vpn_if }} --jump MASQUERADE
$IPT --delete INPUT --in-interface {{ vpn_if }} --jump ACCEPT
$IPT --delete FORWARD --in-interface {{ wired_if }} --out-interface {{ vpn_if }} --jump ACCEPT
$IPT --delete FORWARD --in-interface {{ vpn_if }} --out-interface {{ wired_if }} --jump ACCEPT

